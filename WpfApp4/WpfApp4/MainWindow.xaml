<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="737*"/>
        </Grid.ColumnDefinitions>
        <Label Content="id"  Width="50" Height="40" FontSize="25" FontWeight="bold"  Grid.ColumnSpan="2" Margin="33,30,767,364"></Label>
        <Label Height="60" Name="id" FontSize="30" FontWeight="Bold" RenderTransformOrigin="3.594,1.325" Grid.Column="1" Margin="42,15,487,359"/>
        <Label Content="Name:" FontSize="20" FontWeight="Bold" Height="50" Margin="10,100,740,284" Grid.ColumnSpan="2" RenderTransformOrigin="0.653,-0.765" />

        <TextBox BorderBrush="Black" FontSize="30" FontWeight="Bold" Name="Name"
                  Background="Aqua" Keyboard.KeyDown="Name_KeyDown" Width="300" Height="50" Margin="63,157,487,227" Grid.ColumnSpan="2"></TextBox>
        <Label Content="Grade:" FontSize="20" FontWeight="Bold" Margin="33,217,692,-217" Grid.ColumnSpan="2" />
        <TextBox BorderBrush="Black" Name="Grade" FontSize="30" FontWeight="Bold" Background="Aqua"  Width="300" Height="50" Margin="63,264,487,120" Grid.ColumnSpan="2" RenderTransformOrigin="0.51,1.981"></TextBox>
        <Label Content="Age:" FontSize="20" FontWeight="Bold" Height="50" Margin="33,319,717,65" Grid.ColumnSpan="2" RenderTransformOrigin="0.575,1.963" />
        <TextBox BorderBrush="Black" Name="Age" FontSize="30" FontWeight="Bold" Background="Aqua"  Width="300" Height="50" Margin="0,374,483,10" Grid.Column="1" TextChanged="Age_TextChanged"/>
       
        <ComboBox Name="combo" Height="50" Grid.Column="1" Margin="391,25,46,359" SelectionChanged="combo_SelectionChanged"/>
        <Button Height="60" Grid.Column="1" Content="Display" FontSize="25" FontWeight="Bold" Margin="478,187,133,187" Click="Button_Click"  />
        <Button Height="60" Grid.Column="1" Content="UPdate" FontSize="25" FontWeight="Bold"  Margin="478,344,133,30" Click="Button_Click_1"/>
    </Grid>
</Window>
